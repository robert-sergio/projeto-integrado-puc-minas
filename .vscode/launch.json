    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}\\agendador-maquiadoras-front",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "dev"
            ]
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\agendador_maquiadoras_back\\manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "env": { "PYTHONPATH": "${workspaceRoot}:venv:Scripts"},
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Test Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\agendador_maquiadoras_back\\manage.py",
            "args": [
                "test"
            ],
            "env": { "PYTHONPATH": "${workspaceRoot}:venv:Scripts"},
            "django": true,
            "justMyCode": true
        }
    ]
}